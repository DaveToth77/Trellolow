<section>
  <h3>Create New List</h3>

  <form class="new-list-form">
    <div>
      <label for="list-title">Title</label>
      <input type="text" id="list-title" name="list-title" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if lists.length }}
<section>
  <ol>
    {{#each lists as |list|}}
    <li>
      {{> list-info list}}
      <a href="/dashboard/edit/{{list.id}}" class="edit-link">Edit list</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

{{#if cards}}
<section>
<ul class=“card”>
    {{#each cards as |card|}}
        <li>
            {{> cards }}
        </li>
    {{/each}}
</ul>
</section>
{{/if}}


<div class="modal fade" id="addCardModal" tabindex="-1" role="dialog" aria-labelledby="addCardModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCardModal">New Card</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
          <label for="card-title">Title:</label>
          <input type="text" id="cardTitle" name="card-title" />
        </div>
        <div>
          <label for="card-content">Description:</label>
          <input type="text" id="cardContent" name="card-content" />
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="newCard" onclick="addCard(event)">Save</button>
      </div>
    </div>
  </div>
</div>
</body>
<script src="/javascript/addCard.js"></script>


<script src="/javascript/addList.js"></script>